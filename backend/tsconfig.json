{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
